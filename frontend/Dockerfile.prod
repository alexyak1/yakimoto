# Stage 1: build frontend
FROM node:20 AS builder

WORKDIR /app
COPY package*.json ./
COPY . .

# Inject build-time env variable
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

RUN npm install
RUN npm run build

# Stage 2: serve static files
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
EXPOSE 80
